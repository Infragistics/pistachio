<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:igToyBox="http://infragistics.com/ToyBox"
    x:Class="ToyBoxTester.Window1" 
    Title="ToyBoxTester" Height="300" Width="300"	   
    >
    <Grid>
    	<Button x:Name="myButton" HorizontalAlignment="Left" Margin="8,8,0,0" VerticalAlignment="Top" Content="Button" Click="Button_Click"/>
		<igToyBox:Reflector ReflectionTarget="{Binding ElementName=myButton}" />
		<Grid HorizontalAlignment="Center" MaxHeight="250" MaxWidth="250" VerticalAlignment="Center" Background="#FF000000">
    		<igToyBox:TransitionImage Source="images/AppIcon48.png" MaxWidth="175" MaxHeight="125" x:Name="transImage" Margin="5,5,5,5" />
    	</Grid>
    </Grid>
</Window>
